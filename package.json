{
  "name": "typster-hammy",
  "version": "1.0.0",
  "description": "A desktop hamster companion that reacts to your typing",
  "main": "dist/main/main.js",
  "homepage": "./",
  "scripts": {
    "dev": "concurrently \"npm run dev:main\" \"npm run dev:renderer\" \"npm run start:electron\"",
    "dev:debug": "DEBUG=electron* webpack serve --config webpack.renderer.config.js --mode development",
    "dev:main": "webpack --config webpack.main.config.js --mode development --watch",
    "dev:renderer": "webpack serve --config webpack.renderer.config.js --mode development",
    "start:electron": "wait-on http://localhost:3001 && electron .",
    "build": "npm run build:native && npm run copy:native && npm run build:main && npm run build:renderer",
    "build:native": "cd src/main/services/native && node-gyp rebuild --target=25.0.0 --arch=x64 --dist-url=https://electronjs.org/headers",
    "copy:native": "mkdir -p dist/main/build/Release && cp src/main/services/native/build/Release/keyboard_native.node dist/main/build/Release/",
    "build:main": "webpack --config webpack.main.config.js --mode production",
    "build:renderer": "webpack --config webpack.renderer.config.js --mode production",
    "start": "electron .",
    "test": "jest",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "concurrently": "^8.2.0",
    "css-loader": "^6.8.0",
    "electron": "^25.0.0",
    "eslint": "^8.45.0",
    "eslint-plugin-react": "^7.33.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "events": "^3.3.0",
    "global": "^4.4.0",
    "html-webpack-plugin": "^5.5.0",
    "jest": "^29.6.0",
    "node-addon-api": "^8.5.0",
    "node-gyp": "^11.2.0",
    "node-loader": "^2.1.0",
    "path-browserify": "^1.0.1",
    "style-loader": "^3.3.0",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.0",
    "typescript": "^5.1.0",
    "util": "^0.12.5",
    "wait-on": "^8.0.3",
    "webpack": "^5.88.0",
    "webpack-cli": "^5.1.0",
    "webpack-dev-server": "^4.15.0"
  },
  "dependencies": {
    "@types/sqlite3": "^3.1.11",
    "process": "^0.11.10",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "sqlite3": "^5.1.7"
  },
  "author": "Typster Hammy Team",
  "license": "MIT"
}
